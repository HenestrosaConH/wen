<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/defaultProfileTV"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorTextIcon"
            android:textSize="148sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/ubuntu_bold"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center"
            android:text="gggg"
            android:includeFontPadding="false"
            android:textColor="@color/colorTextIcon"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:text=""
            android:includeFontPadding="false"
            android:textColor="@color/colorTextIcon"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/chatLY"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#8C1010"
                android:foreground="@drawable/ripple"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_chat"
                    app:tint="@color/colorTextIcon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/callLY"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#108C1C"
                android:foreground="@drawable/ripple"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_call"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/videocallLY"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#10278C"
                android:foreground="@drawable/ripple"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_videocam" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>